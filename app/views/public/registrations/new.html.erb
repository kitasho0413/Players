<h2>Player登録</h2>

<%= form_with model: @player, url: player_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :"姓" %>
    <%= f.text_field :first_name, autofocus: true %>
    <%= f.label :"名" %>
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :"姓(かな)" %>
    <%= f.text_field :first_name_kana, autofocus: true %>
    <%= f.label :"名(かな)" %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード確認用" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<table class="table">
  <thead>
    <th></th>
    <th>名前</th>
    <th>活動中のスポーツ</th>
    <th>活動地域</th>
  </thead>
  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td>
        <% if player.image.attached? %>
          <%= image_tag player.image, size: "70x70", class: "icon" %>
        <% else %>
          <%= image_tag "no_image", size: "70x70", class: "icon" %>
        <% end %>
      </td>
      <td>
        <%= link_to player_path(player.id) do %>
          <%= player.first_name %><%= player.last_name %>
        <% end %>
      </td>
      <td><%= player.sport.sport_name %></td>
      <td><%= player.area %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @players %>
<main>
  <div class="title-area">
    <h1 class="contents-title">会員一覧</h1>
  </div>
  <table class="table">
    <thead class="text-center">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @players.each do |player| %>
        <tr>
        <td><%= player.id %></td>
        <td>
          <%= link_to admin_player_path(player.id) do %>
            <%= player.first_name %>
            <%= player.last_name %>
          <% end %>
        </td>
        <td><%= player.email %></td>
        <td>
          <% if player.is_deleted == false %>
            <p class="text-success font-weight-bold">有効</p>
          <% else %>
            <p class="text-secondary font-weight-bold">退会</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-right"><%= paginate @players %></div>
<div class="text-center"><%= link_to "スポーツ一覧へ", admin_sports_path, class: "link" %></div>
</main>
<main>
  <div class="container">
    <div crass="row d-flex align-items-center">
    <h2 class="text-center mb-5">管理者ログイン</h2>
    <%= form_with model: Admin.new, url: admin_session_path do |f| %>


      <div class="form-group text-center mb-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50", placeholder: "メールアドレス" %>
      </div>

      <div class="form-group text-center mb-5">
        <%= f.password_field :password, autocomplete: "current-password", size: "50", placeholder: "パスワード" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "ログイン", class:"button mb-3" %>
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :"パスワードを保存" %>
          </div>
        <% end %>
      </div>
    <% end %>
      <div class="text-center">
        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</main>